<div class="container">
<div class="row">
	{% for banner in banners %}
		<div class="offerbanner col-xs-3">
		  {% if banner.link %}
		  	<a href="{{ banner.link }}">
		  		<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive center-block" />
		  	</a>
		  {% else %}
		  	<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive center-block" />
		  {% endif %}
    </div>
	  {% endfor %}
</div>
</div>